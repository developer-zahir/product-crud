            <div class="col-lg-4">
              <input type="file" name="productPhoto" class="form-control edite-photo-select"  value="/product_photo/<%= editProduct.photo %>" />

              <div class="product-image-box mt-3">
                <img class="rounded img-fluid" id="image-preview" src="/product_photo/<%= editProduct.photo %>" alt="" />
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
  