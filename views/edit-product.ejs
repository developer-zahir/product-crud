<section>
    <div class="container">
      <a href="/product-dashboard" class="btn btn-primary px-3 mt-5"><i class="fa-solid fa-shop"></i> Dashboard</a>
      <a href="/shop" class="btn btn-success px-3 mt-5"><i class="fa-regular fa-eye"></i> View Store</a>
     
      <!-- page content here -->
      <div class="page-content mt-3 border p-4 rounded shadow-sm">
        <form action="/update/<%= editProduct.id %>" enctype="multipart/form-data" method="POST">
          <div class="form-header">
            <div class="row align-content-center ">
              <div class="col-lg-8 col-md-9">
                <h2 class="mb-3">Update product</h2>
              </div>
              <div class="col-lg-4 col-md-3 text-end">
                <button class="btn btn-sm btn-danger px-3 " id="backButton">Back</button>
                <a class="btn btn-sm btn-warning px-3" href="/single/<%= editProduct.slug %>">View</a>
              </div>
            </div>
          </div>
  
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" placeholder="Product name" name="name" value="<%= editProduct.name %>"  />
            <label for="name">Product name</label>
          </div>
  
          <div class="row">
            <div class="col-lg-4">
              <div class="form-floating">
                <input type="text" class="form-control" id="regular-price" placeholder="Regula price" name="regularPrice" value="<%= editProduct.regularPrice %>"  />
                <label for="regular-price">Regular price</label>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-floating">
                <input type="text" class="form-control" id="sale-price" placeholder="Sale price" name="salePrice" value="<%= editProduct.salePrice %>"/>
                <label for="sale-price">Sale price</label>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-floating">
                <input type="text" class="form-control" id="stock" placeholder="Stock" name="stock" value="<%= editProduct.stock %>"/>
                <label for="stock">Stock</label>
              </div>
            </div>
          </div>
  
          <div class="row mt-3">
            <div class="col-lg-8">
              <div class="form-floating">
